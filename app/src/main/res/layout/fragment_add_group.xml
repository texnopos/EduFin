<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar_add"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_middle"
        android:layout_marginTop="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/margin_large"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintTop_toBottomOf="@id/actionBar">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_middle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_middle">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/spTeachers"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:hint="@string/selectTeacher"
                    app:layout_constraintTop_toTopOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/actTeachers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:padding="@dimen/margin_large_standard"
                        android:text="@string/doNotSelected"
                        android:textSize="@dimen/text_size_standard"
                        tools:ignore="SpUsage" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/groupName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard_middle"
                    android:hint="@string/group_name"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="@dimen/margin_large_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    app:layout_constraintTop_toBottomOf="@id/spTeachers"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    app:layout_constraintTop_toBottomOf="@id/groupName"
                    tools:ignore="SpUsage" />

                <TimePicker
                    android:id="@+id/tpTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:timePickerMode="spinner"
                    app:layout_constraintTop_toBottomOf="@id/time" />

                <TextView
                    android:id="@+id/tvGroupCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:text="@string/groupCreated"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tpTime"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/tvLessonStarts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:text="@string/lessonStartsIn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvGroupCreated"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:id="@+id/imgCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_standard"
                    android:layout_marginEnd="@dimen/margin_standard"
                    android:padding="@dimen/margin_small"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintBottom_toTopOf="@id/llDays"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tpTime" />

                <TextView
                    android:id="@+id/tvDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_standard"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/llDays"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLessonStarts"
                    tools:ignore="SpUsage" />

                <LinearLayout
                    android:id="@+id/llDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDates"
                    tools:viewBindingIgnore="true">

                    <TextView
                        android:id="@+id/mon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingVertical="@dimen/margin_standard_middle"
                        android:tag="1"
                        android:text="@string/mon"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="@dimen/margin_standard_middle"
                        android:tag="2"
                        android:text="@string/tue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/wed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="@dimen/margin_standard_middle"
                        android:tag="3"
                        android:text="@string/wed"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/thu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="@dimen/margin_standard_middle"
                        android:tag="4"
                        android:text="@string/thu"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/fri"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="@dimen/margin_standard_middle"
                        android:tag="5"
                        android:text="@string/fri"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/sat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="@dimen/margin_standard_middle"
                        android:tag="6"
                        android:text="@string/sat"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/sun"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="@dimen/margin_standard_middle"
                        android:tag="7"
                        android:text="@string/sun"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        tools:ignore="SpUsage" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/shape_button"
        android:padding="@dimen/margin_standard"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpUsage" />
</androidx.constraintlayout.widget.ConstraintLayout>